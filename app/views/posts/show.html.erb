<h1>show</h1>
<table>
 <th>タイトル</th>
 <th>本文</th>
 <tr>
  <td><%= @post.title %></td>
  <td><%= @post.body %></td>
 </tr>
</table>

<% if @post.likes.exists?(user: current_user) %>
 <%= button_to 'いいね解除', post_like_path(@post), method: :delete %>
<% else %>
 <%= button_to 'いいね', post_like_path(@post), method: :post %>
<% end %>

<p>いいね数：<%= @post.likes.count %></p>