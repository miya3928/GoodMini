<h1>新規投稿</h1>

<% if @post.errors.any? %>
  <div style="color: red;">
    <p><strong><%= @post.errors.count %>件のエラーがあります:</strong></p>
    <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @post, local: true do |f| %>
 <div> 
   <%= f.label :title %>
   <%= f.text_field :title %>
 </div>
 <div>
   <%= f.label :body %>
   <%= f.text_area :body %>
 </div>
 <%= f.submit "投稿する" %>
<% end %> 